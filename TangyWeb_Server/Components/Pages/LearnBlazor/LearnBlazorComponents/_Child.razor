@rendermode InteractiveServer

<div>
    <div class="alert alert-info">@Title</div>
    @if (ChildContent != null)
    {
        <div class="alert alert-success">
            <span>@ChildContent</span>
        </div>
    }
    
    <button class="btn btn-danger" @onclick="OnButtonClicked">Button to be clicked</button>

</div>

<_GrandChildComponent MessageForGrandChild="This is a message from your parent (_Child)"></_GrandChildComponent>


@code {
    [Parameter] public string Title { get; set; }

    [Parameter] public RenderFragment? ChildContent { get; set; }

    [Parameter] public EventCallback OnButtonClicked { get; set; }
}
